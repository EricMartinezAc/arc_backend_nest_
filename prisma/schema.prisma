generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  psw     String   
  email   String   @unique
  state   Boolean @default(true)
  credits Int @default(0)
  level Int @default(0)

  createdAd DateTime @default(now())
  updatedAd DateTime @updatedAt

  @@index([state])
}
